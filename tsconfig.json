{
  "compilerOptions": {
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2017", "es6", "dom.iterable", "scripthost"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "target": "es5"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/typings/imports.d.ts",
    "webpack.config.ts",
    "webpack/**/*.ts",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
